<?php
    $action=$_GET['action'];
    
    $mysqli = new mysqli("localhost", "root", "", "db_rental");
      if ($_GET['action']=="add"){
        $result = $mysqli->query("SELECT MAX(id_produk) AS currentid FROM produk;");

        $row = $result->fetch_assoc(); //khusus single result
        $currentid=$row['currentid']+1; //tambahkan dengan 1 untuk id baru
        $nama="";
        $harga="";
        $stok="";
      }
      else if ($_GET['action']=="edit"){
        $currentid=$_GET['id_produk'];
        $query="SELECT * from produk where id_produk=".$currentid.";";
        //print_r($query);
        $result = $mysqli->query($query);
        $row = $result->fetch_assoc(); //khusus single result
        //print_r($row);
        $nama=$row['nama_produk'];
        $harga=$row['harga'];
        $stok=$row['stok'];

      }
    
  ?>

