      <input type="text" class="form-control" name="id" id="id" placeholder="ID" value="<?php echo $currentid;?>">
    </div>
    <div class="mb-3">
      <label for="nama" class="form-label">Nama Produk</label>
      <input type="text" class="form-control" name="nama" id="nama" placeholder="tuliskan nama produk di sini" value="<?php echo $nama;?>">
    </div>
    <div class="mb-3">
      <label for="harga" class="form-label">Harga</label>
      <input type="text" class="form-control" name="harga" id="harga" placeholder="tuliskan harga produk di sini" value="<?php echo $harga;?>">
    </div>
    <div class="mb-3">
      <label for="stok" class="form-label">Stok</label>
      <input type="text" class="form-control" name="stok" id="stok" placeholder="tuliskan stok produk di sini" value="<?php echo $stok;?>">
